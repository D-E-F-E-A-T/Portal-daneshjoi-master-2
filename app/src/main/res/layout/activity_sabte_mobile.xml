<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_activities"
    android:layout_height="match_parent"
    tools:context=".Activity.Other_Activitys.Sabte_mobile">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar_sabtemobile_id"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize"/>

    <ScrollView
        android:layout_below="@id/toolbar_sabtemobile_id"
        android:padding="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:background="@drawable/back_1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_50dp"
            android:scrollbars="vertical"
            app:cardElevation="@dimen/margin_5dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_15dp"
                    android:id="@+id/txtinput_mobilefelli_id"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:id="@+id/mobile_feli_id"
                        android:textSize="@dimen/textsize_18sp"
                        android:hint="@string/shomarefeli"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:padding="@dimen/padding_5dp"
                        android:layout_margin="@dimen/margin_15dp"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_15dp"
                    android:layout_below="@id/txtinput_mobilefelli_id"
                    android:id="@+id/txtinput_mobilejadid_id"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:id="@+id/mobile_jadid_id"
                        android:textSize="@dimen/textsize_18sp"
                        android:hint="@string/shomarejadid"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:padding="@dimen/padding_5dp"
                        android:layout_margin="@dimen/margin_15dp"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:background="@color/green_color"
                    android:text="@string/mobilesubmit"
                    android:id="@+id/btn_submitmobile_id"
                    android:layout_below="@id/txtinput_mobilejadid_id"
                    android:layout_margin="@dimen/margin_15dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>